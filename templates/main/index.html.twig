{% extends 'base.html.twig' %}
{% block header %} 
    <div class="flex justify-between">
        <h1 class="text-xl">Bienvenue sur mes deck list</h1>
        <h1 class="text-xl"><a href="/account">Compte</a></h1>
    </div>
{% endblock %}

{% block body %}
    <link href="//cdn.jsdelivr.net/npm/mana-font@latest/css/mana.min.css" rel="stylesheet" type="text/css" />
    
    <main class="p-12 flex flex-col w-full gap-4">
          {% for deck in decks %}
            {{ component('deck', {id: deck.id, name: deck.name, author: deck.user.pseudo}) }} 
          {% endfor %}
    </main>
{% endblock %}